{
  "private": true,
  "name": "@dfinity/js-user-library",
  "version": "0.1.0",
  "main": "out/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:js": "babel src --out-dir out --extensions \".ts\" --source-maps inline",
    "test": "npm run type-check && jest"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "text-encoding": "^0.7.0",
    "typescript": "^3.6.3",
    "whatwg-fetch": "^3.0.0"
  }
}
